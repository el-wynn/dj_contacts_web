{
    "version": 2,
    "public": false,
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' connect.soundcloud.com accounts.spotify.com; style-src 'self' 'unsafe-inline'"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },{
        "source": "/api/soundcloud/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin", 
            "value": "https://connect.soundcloud.com"
          }
        ]
      }
        ],
    "rewrites": [
      {
        "source": "/api/soundcloud/(.*)",
        "destination": "/api/soundcloud/routes"
      }
    ]
  }